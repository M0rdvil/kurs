{
	"compilerOptions": {
		"target": "ES2024",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"outDir": "./server/dist",
		"rootDir": "./server",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["server/src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "client"]
}
